<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar align-items-center border-bottom">
        <div class="container-fluid">
            <div class="d-flex align-items-center ">
                <a asp-page="Index" style="text-decoration:none;"> MedPortal </a>
                <div id="verticalbar" class="mx-xxl-2 mx-1 d-none d-lg-inline-block"></div>
                <a href="#" class="nav-link textColor fw-lighter lh-sm brandSubHeading d-none d-lg-inline-block">
                    Visitor
                    <br>
                    <span class="fw-medium brandSubHeading d-none d-lg-inline-block"> Medicine Portal</span>
                </a>
            </div>
            <div class="d-flex align-items-center">
                <div class="d-none d-lg-block">
                    <ul class="d-flex m-0 list-unstyled ">
                        <li class="nav-item iconChange  me-4 pt-2">
                            <a href="#" class="nav-link text-center  p-0">
                                <div class=" d-flex align-items-center overflow-hidden changeWidth mx-auto">
                                    <img class="one iconHeight mx-2" src="~/img/hospital.png">
                                </div>
                                <div class="smallFont textColor">
                                    <a asp-page="Hospitals" style="text-decoration:none;"> Hospitals </a>
                </div>
                            </a>
                        </li>
                        <li class="nav-item iconChange   me-4 pt-2">
                            <a href="#" class="nav-link text-center p-0">
                                <div class=" d-flex align-items-center overflow-hidden changeWidth mx-auto">
                                    <img class="iconHeight mx-2" src="~/img/stethoscope.png">
                                </div>
                                <div class="smallFont textColor">
                                    <a asp-page="Doctors" style="text-decoration:none;">Doctors </a>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item iconChange  me-4 pt-2">
                            <a href="#" class="nav-link text-center p-0">
                                <div class=" d-flex align-items-center overflow-hidden changeWidth mx-auto">
                                    <img class=" iconHeight mx-2" src="~/img/hospit.png">
                                </div>
                                <div class="smallFont textColor">
                                     <a asp-page="History" style="text-decoration:none;"> History of illnesses </a> </div>
                            </a>
                        </li>
                        <li class="nav-item iconChange  me-4 pt-2">
                            <a href="#" class="nav-link text-center p-0">
                                <div class=" d-flex align-items-center overflow-hidden changeWidth mx-auto">
                                    <img class=" iconHeight mx-2" src="~/img/hospital-bed.png">
                                </div>
                                <div class="smallFont textColor">
                                 <a asp-page="Registration" style="text-decoration:none;"> Make an appointment </a> </div>
                            </a>
                        </li>
                        <li class="nav-item iconChange  me-3 pt-2">
                            <a href="#" class="nav-link text-center p-0">
                                <div class=" d-flex align-items-center overflow-hidden changeWidth mx-auto">
                                    <img class="iconHeight mx-2" src="/static_files/svgs2/briefcase.svg"
                                         alt="briefcase">
                                    <img class=" iconHeight mx-2" src="/static_files/svgs2/briefcase-fill.svg"
                                         alt="briefcase">
                                </div>
                                <div class="smallFont textColor">
                                    <a asp-page="DoctorLK" style="text-decoration:none;"> Im Doctor </a>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
                <button id="loginBtn" class="btn btn-sm m-sm-2 m-1 bg-primary text-white rounded-5 px-sm-3 px-2">
                        <img class="d-none d-lg-inline-block" src="~/img/icons8.png">
                        <a asp-page="Login" style="text-decoration:none;">Login</a>
                </button>
            </div>
        </div>
    </nav>
    <nav id="secondNav" class="bottom-0 position-fixed end-0 start-0">
        <div class="d-lg-none">
            <div class="container-fluid d-flex justify-content-between shadow pt-2">

                <a asp-page="Hospitals" style="text-decoration:none;">
                    <img class="iconHeight mb-1" alt="dpad" src="~/img/hospital.png">
                    <div class="extraSmallFont pb-1">Hospitals</div>
                </a>
                <a asp-page="Doctors" style="text-decoration:none;"> 
                    <img class="iconHeight mb-1" src="~/img/stethoscope.png" alt="dpad">
                    <div class="extraSmallFont pb-1">Doctors</div>
                </a>
                <a asp-page="History" style="text-decoration:none;">
                    <img class="iconHeight mb-1" src="~/img/hospit.png" alt="bar-chart">
                    <div class="extraSmallFont pb-1">History of illnesses</div>
                </a>
                <a asp-page="Registration" style="text-decoration:none;">
                    <img class="iconHeight mb-1" src="~/img/hospital-bed.png" alt="lightbulb">
                    <div class="extraSmallFont pb-1">Make an appointment</div>
                </a>
                <a href="#" class="text-decoration-none textColor  text-center">
                    <img class="iconHeight mb-1" src="/static_files/svgs2/briefcase.svg" alt="briefcase">
                    <div class="extraSmallFont pb-1">Career</div>
                </a>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="_framework/blazor.server.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>